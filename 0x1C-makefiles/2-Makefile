################################################
# Variables.

CC = gcc
CFLAGS = -g -Wall
SRC = holberton.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton

################################################

# This rule compiles the files to make the executable.
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) m.h -o $(NAME)

main.o: main.c m.h
	$(CC) -c main.c

holberton.o: holberton.c m.h
	$(CC) -c holberton.c

