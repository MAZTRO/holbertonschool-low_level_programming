.PHONY: all clean oclean fclean re
################################################
# Variables.

CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic -g
SRC = holberton.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton

################################################

# This rule compiles the files to make the executable.
all: $(OBJ) m.h
	$(CC) -o $(NAME) $(OBJ)

clean:
	$(RM) -rf *~ $(NAME)

oclean:
	$(RM) -rf $(OBJ)

fclean : clean oclean

re: oclean all
